<%- include header %>
<ul class="archive">
    <% var lastYear = 0 %>
    <% posts.forEach(function (post, index) { %>
    <% if (lastYear != post.time.year) { %>
    <li><h2><%= post.time.year %></h2></li>
    <% lastYear=post.time.year } %>
    <li><h3><time><%= post.time.day %></time></h3></li>
    <li><h3><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h3></li>
    <% }) %>
</ul>
<%- include footer %>
